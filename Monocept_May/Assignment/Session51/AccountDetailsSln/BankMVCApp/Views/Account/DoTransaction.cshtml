@using BankMVCApp.ViewModel
@model TransactionVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        color: forestgreen;
    }

    h4 {
        text-align: center;
        color: black;
    }

    dt {
        font-weight: bold;
    }

    span {
        font-weight: normal;
    }
</style>

<h2>Do Transaction</h2>

<h4><b>Account Details</b></h4>

<hr />

<div>
    <dl class="dl-horizontal">
        <dt>ID : <span>@Model.Account.Id</span></dt>
        <dt>Name : <span>@Model.Account.Name</span></dt>
        <dt>Balance : <span>@Model.Account.Balance</span></dt>
    </dl>
</div>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4><b>Perform Transaction</b></h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(m => m.Amount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Type, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Deposit
                @Html.RadioButtonFor(m => m.Type, "D")
                Withdraw
                @Html.RadioButtonFor(m => m.Type, "W")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>

    </div>
}