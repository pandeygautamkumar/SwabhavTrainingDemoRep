@using LoginMVCCoreApp.ViewModel
@model RegisterVM

<style>
    .validation-summary-errors {
        color: red
    }
    h2 {
        text-align: center;
        color: forestgreen;
    }
    label{
        font-weight: bold;
        color: black;
    }
</style>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<h2>User Registration</h2>
<hr />
<div class="container">
    <form asp-controller="Login" asp-action="Index" method="post" class="mt-3">

        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input asp-for="Id" class="form-control" placeholder="ID">
            </div>
        </div><br/>

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input asp-for="Name" class="form-control" placeholder="Name">
            </div>
        </div><br/>

        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input type="Password" asp-for="Password" class="form-control" placeholder="Password">
            </div>
        </div><br/>

        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input type="Address" asp-for="Address" class="form-control" placeholder="Address">
            </div>
        </div><br/>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Register</button>
                <a asp-controller="Login" asp-action="Index" class="btn btn-secondary">Login</a>
            </div>
        </div>
    </form>
</div>

