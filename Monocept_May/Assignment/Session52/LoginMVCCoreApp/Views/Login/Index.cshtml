@using LoginMVCCoreApp.ViewModel
@model LoginVM

<style>
    .validation-summary-errors {
        color: red
    }
    h2 {
        text-align: center;
        color: forestgreen;
    }
    label{
        font-weight: bold;
        color: black;
    }
</style>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<h2>User Login</h2>
<hr />
<div class="container">
    <form asp-controller="Login" asp-action="Index" method="post" class="mt-3">

        <div class="form-group row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input asp-for="UserName" class="form-control" placeholder="UserName">
            </div>
        </div><br/>

        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password">
            </div>
        </div><br/>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Login</button>
                <a asp-controller="Register" asp-action="Index" class="btn btn-secondary">SignUp</a>
            </div>
        </div>
    </form>
</div>

