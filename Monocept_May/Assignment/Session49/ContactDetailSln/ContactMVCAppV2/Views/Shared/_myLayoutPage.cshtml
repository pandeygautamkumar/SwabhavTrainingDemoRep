<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="navbar-collapse collapse" style="background-color:darkgrey;color:white;">
        <ul class="nav navbar-nav">
            <li>
                @Html.ActionLink("Home", "GetContacts")
            </li>
            <li>
                @Html.ActionLink("Display", "GetContacts")
            </li>
            <li>
                @Html.ActionLink("Add Contacts", "AddContact")
            </li>
            <li>
                @Html.ActionLink("GetById", "GetContact")
            </li>
        </ul>
    </div>
    <div style="margin:20px;">
        <nav>
            <p>
                @if (Session["username"] == null)
                {
                    <span>Guest</span>
                    @Html.ActionLink("Login", "Index", "Login");
                }
                else
                {
                    <span>Welcome, @Session["username"]</span>
                    @Html.ActionLink("Logout", "LogOut", "Contacts")
                }
            </p>
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
