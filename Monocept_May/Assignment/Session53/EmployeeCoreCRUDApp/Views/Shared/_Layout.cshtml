<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        a {
            color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #9fb5c5;">
        <h4 class="navbar-brand"><b>Employee Management App</b></h4>
        <button class="btn btn-success my-2 my-lg-0 fa fa-plus"><a asp-controller="Employee" asp-action="Add">Add Employee</a></button>
        <button class="btn btn-danger my-2 my-lg-0 fa fa-sign-out" style="margin-left:15px;"><a asp-controller="Employee" asp-action="LogOut">LogOut</a></button>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div><br /><br />
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - EmployeeCoreCRUDApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>




